{
  "name": "ramp-fitness-planner",
  "version": "1.0.0",
  "description": "AI-powered fitness planning application with React frontend and Node/Express backend",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --no-deprecation server/index.js",
    "client": "cd client && npm start",
    "build": "echo 'Skipping root build; client build runs in CI'",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "keywords": ["fitness", "ai", "react", "express", "tailwind"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
